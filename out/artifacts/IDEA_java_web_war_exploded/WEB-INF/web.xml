<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>IDEA_java web</display-name>
    <!--**********登录**********-->
        <servlet>
            <servlet-name>logon</servlet-name>
            <servlet-class>servlet.LogonServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>logon</servlet-name>
            <url-pattern>/logon</url-pattern>
        </servlet-mapping>

    <!--**********注册**********-->
        <servlet>
            <servlet-name>register</servlet-name>
            <servlet-class>servlet.RegisterServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>register</servlet-name>
            <url-pattern>/register</url-pattern>
        </servlet-mapping>

    <!--**********学生信息管理模块**********-->
        <servlet>
            <servlet-name>studentmanage</servlet-name>
            <servlet-class>servlet.StudentManageServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>studentmanage</servlet-name>
            <url-pattern>/studentmanage</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>studentinfo</servlet-name>
            <servlet-class>servlet.StudentInfoServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>studentinfo</servlet-name>
            <url-pattern>/studentinfo</url-pattern>
        </servlet-mapping>
        <!--获取学生信息-->
            <servlet>
                <servlet-name>getstudentinfo</servlet-name>
                <servlet-class>servlet.GetStudentinfoServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>getstudentinfo</servlet-name>
                <url-pattern>/getstudentinfo</url-pattern>
            </servlet-mapping>
        <!--更新学生信息-->
            <servlet>
                <servlet-name>updatestudent</servlet-name>
                <servlet-class>servlet.UpdateStudentServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>updatestudent</servlet-name>
                <url-pattern>/updatestudent</url-pattern>
            </servlet-mapping>
        <!--添加学生信息-->
            <servlet>
                <servlet-name>addstudent</servlet-name>
                <servlet-class>servlet.AddStudentServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>addstudent</servlet-name>
                <url-pattern>/addstudent</url-pattern>
            </servlet-mapping>
        <!--删除学生信息-->
            <servlet>
                <servlet-name>delstudent</servlet-name>
                <servlet-class>servlet.DelStudentServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>delstudent</servlet-name>
                <url-pattern>/delstudent</url-pattern>
            </servlet-mapping>
        <!--查询学生信息-->
            <servlet>
                <servlet-name>querystudents</servlet-name>
                <servlet-class>servlet.QueryStudentsServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>querystudents</servlet-name>
                <url-pattern>/querystudents</url-pattern>
            </servlet-mapping>

    <!--**********用户信息管理模块**********-->
        <servlet>
            <servlet-name>userinfo</servlet-name>
            <servlet-class>servlet.UserinfoServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>userinfo</servlet-name>
            <url-pattern>/userinfo</url-pattern>
        </servlet-mapping>
        <!--查询用户信息-->
            <servlet>
                <servlet-name>queryuser</servlet-name>
                <servlet-class>servlet.QueryUserServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>queryuser</servlet-name>
                <url-pattern>/queryuser</url-pattern>
            </servlet-mapping>
        <!--删除用户信息-->
            <servlet>
                <servlet-name>deluser</servlet-name>
                <servlet-class>servlet.DelUserServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>deluser</servlet-name>
                <url-pattern>/deluser</url-pattern>
            </servlet-mapping>
        <!--获取用户信息-->
            <servlet>
                <servlet-name>getuserinfo</servlet-name>
                <servlet-class>servlet.GetUserinfoServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>getuserinfo</servlet-name>
                <url-pattern>/getuserinfo</url-pattern>
            </servlet-mapping>
        <!--更新用户信息-->
            <servlet>
                <servlet-name>updateuser</servlet-name>
                <servlet-class>servlet.UpdateUserServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>updateuser</servlet-name>
                <url-pattern>/updateuser</url-pattern>
            </servlet-mapping>
        <!--添加用户信息-->
            <servlet>
                <servlet-name>adduser</servlet-name>
                <servlet-class>servlet.AddUserServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>adduser</servlet-name>
                <url-pattern>/adduser</url-pattern>
            </servlet-mapping>
    <!--**********课程信息管理模块**********-->

    <!--**********成绩信息管理模块**********-->
        <servlet>
            <servlet-name>scoreinfo</servlet-name>
            <servlet-class>servlet.ScoreinfoServlet</servlet-class>
        </servlet>
        <servlet-mapping>
            <servlet-name>scoreinfo</servlet-name>
            <url-pattern>/scoreinfo</url-pattern>
        </servlet-mapping>
        <!--查询成绩信息-->
            <servlet>
                <servlet-name>queryscore</servlet-name>
                <servlet-class>servlet.QueryScoreServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>queryscore</servlet-name>
                <url-pattern>/queryscore</url-pattern>
            </servlet-mapping>
        <!--添加用户信息-->
            <servlet>
                <servlet-name>addscore</servlet-name>
                <servlet-class>servlet.AddScoreServlet</servlet-class>
            </servlet>
            <servlet-mapping>
                <servlet-name>addscore</servlet-name>
                <url-pattern>/addscore</url-pattern>
            </servlet-mapping>


    <!--*****************分 界 线*********************-->
    <filter>
        <filter-name>characterfilter</filter-name>
        <filter-class>filter.CharacterFilter</filter-class>

        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>

    </filter>

    <filter-mapping>
        <filter-name>characterfilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>

    <!-- 十分钟后自动退出登录  -->
    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

</web-app>